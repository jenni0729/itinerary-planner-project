<%= simple_form_for(@itinerary, defaults: { error_html: { id: 'error' } }, :html => { :class => "form-inline"}) do |f|%>
<div class="row">
  <div class="col-md-2 col-md-offset-1">
    <%= f.input :name%>
  </div>
  <div class="col-md-2 col-md-offset-1">
    <%= f.input :origin%>
  </div>
  <div class="col-md-4 col-md-offset-1">
    <br>
    <%= f.input :departure_date%>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-2 col-md-offset-1">
    <%= f.input :user_id%>
  </div>
  <div class="col-md-2 col-md-offset-1">
    <%= f.input :destination%>
  </div>
  <div class="col-md-4 col-md-offset-1">
    <br>
    <%= f.input :return_date%>
  </div>
</div>
<br><br>
<div class ="row">
  <div class = "col-md-2 col-md-offset-3">
    <%=  link_to('Back to Itineraries', itineraries_path, {class: "btn btn-primary"}) %>
  </div>
  <div class ="col-md-2 col-md-offset-2">
    <%= f.submit "Create itinerary", class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
</div>