<%= render "shared/navbar" %>
<div class="container-fluid">
<br><br>
  <h2 class ="text-center">Log In:</h2>
  <br>

  <%= simple_form_for(@user, :url => attempt_login_path, defaults: { error_html: { id: 'error' } }, :html => { :class => "form-inline-lg"}) do |f|%>
 
  <div class="row">
    <div class="col-md-2 col-md-offset-3">
      <%= f.input :username%>
    </div>
    <div class="col-md-2 col-md-offset-1">
      <%= f.input :password%>
    </div>
 </div>
 <div class = "row">
    <div class ="col-md-2 col-md-offset-5">
      <%= f.submit "Login", class: 'btn-lg btn-primary' %>
    </div>
    </div>
  <% end %>

</div>
