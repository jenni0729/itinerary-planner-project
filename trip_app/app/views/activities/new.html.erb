<%= render "shared/navbar" %>
<br>
<div class="container-fluid">
  <h2 class ="text-center">New Activity</h2>
  <br>
  <%= simple_form_for(@activity, url: itinerary_activities_path(@itinerary), defaults: { error_html: { id: 'error' } }, :html => { :class => "form-inline"}) do |f|%>
    <div class="row">
      <div class="col-md-1 col-md-offset-3">
        <%= f.input :name %>
      </div>
      <div class="col-md-2 col-md-offset-1">
        <%= f.input :location %>
      </div>
      <div class="col-md-4">
        <br>
        <%= f.input :date %>
      </div>
      <!-- hidden input -->
      <%= f.input :itinerary_id, :as => :hidden, :input_html => { :value => @itinerary.id }%>
      <%= f.input :start_date, :as => :hidden, :input_html => { :value => @itinerary.departure_date }%>
      <%= f.input :end_date, :as => :hidden, :input_html => { :value => @itinerary.return_date }%>
    </div>
    <br>
    <div class ="row">
      <div class = "col-md-2 col-md-offset-3">
        <%= link_to('Back to Activities', itinerary_activities_path(@itinerary), {class: "btn btn-primary"}) %>
      </div>
      <div class ="col-md-2 col-md-offset-2">
        <%= f.submit "Create Activity", class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>