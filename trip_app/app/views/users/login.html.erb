<%= render "shared/navbar" %>
<br>
<div class="container-fluid">
  <div class = "row">
      <div class ="col-md-2 col-md-offset-4">
        <h2>Log in:</h2>
      </div>
  </div>

  <br>
  <%= simple_form_for(@user, :url => attempt_login_path, defaults: { error_html: { id: 'error' } }, :html => { :class => "form-inline-lg"}) do |f|%>

    <div class="row">
      <div class="col-md-2 col-md-offset-4">
        <%= f.input :username%>
      </div>
      <div class="col-md-2">
        <%= f.input :password%>
      </div>
      <div class ="col-md-2">
        <%= f.submit "Login", class: 'btn-lg btn-primary' %>
      </div>
    </div>
  <% end %>

</div>
